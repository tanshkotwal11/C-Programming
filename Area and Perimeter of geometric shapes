#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    float r, a, l, w;
    float area, perimeter, area1, perimeter1, area2, perimeter2;

    // Input for Circle
    scanf("%f", &r);
    area = 3.1416 * r * r;
    perimeter = 2 * 3.1416 * r;
    printf("Circle: %.2f %.2f\n", area, perimeter);

    // Input for Square
    scanf("%f", &a);
    area2 = a * a;
    perimeter2 = 4 * a;
    printf("Square: %.2f %.2f\n", area2, perimeter2);

    // Input for Rectangle
    scanf("%f %f", &l, &w);
    area1 = l * w;
    perimeter1 = 2 * (l + w);
    printf("Rectangle: %.2f %.2f\n", area1, perimeter1);

    return 0;
}
